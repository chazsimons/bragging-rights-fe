<div class="container-fluid">
  <div class="row text-center">
    <h3>Top Braggers!</h3>
  </div>

  <div class="row justify-content-center text-center mb-5">
    <div class="col-lg-6">
      <%= form_with url: '/leaderboard', method: :get, remote: true do |f| %>
        <div class="row">
          <div class="col-3 answer dashboard-panel">
            <%= f.submit "City" %>
          </div>
          <div class="col-3 answer dashboard-panel">
            <%= f.submit "State" %>
          </div>
          <div class="col-3 answer dashboard-panel">
            <%= f.submit "Country" %>
          </div>
          <div class="col-3 answer dashboard-panel">
            <%= f.submit "World" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row text-center justify-content-center">
    <div class="col-lg-6 bg-semi-transparent">
      <h4 class="p-2">Scores for (Placeholder for selected location)</h4>
      <table class="table">
        <tr>
          <th>User</th>
          <th>Score</th>
        </tr>
